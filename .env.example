# =============================================
# Zenith Tasks - Environment Variables
# =============================================

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Neon PostgreSQL connection string
DATABASE_URL="postgresql://user:password@ep-your-project.us-east-2.aws.neon.tech/neondb?sslmode=require"

# ============================================
# AI CONFIGURATION
# ============================================
# Primary AI provider: 'google', 'openai', 'anthropic', 'xai', 'openrouter'
AI_SDK_PROVIDER="google"
AI_SDK_ENABLED=true

# Google Gemini Configuration
# Get API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=""
GEMINI_MODEL="gemini-2.5-flash"
GEMINI_ENABLE_SEARCH=true

# OpenAI Configuration
# For Whisper speech-to-text and GPT models
OPENAI_API_KEY=""

# Anthropic Claude Configuration (optional)
ANTHROPIC_API_KEY=""

# XAI Grok Configuration (optional)
XAI_API_KEY=""

# OpenRouter Configuration (optional, for unified AI access)
OPENROUTER_API_KEY=""

# AI Gateway Configuration (Portkey) - Optional
USE_AI_GATEWAY=false
AI_GATEWAY_API_KEY=""
AI_GATEWAY_BASE_URL="https://api.portkey.ai/v1"
PORTKEY_API_KEY=""
PORTKEY_VIRTUAL_KEY=""

# ============================================
# AUTHENTICATION (CLERK)
# ============================================
# Currently bypassed for deployment stability
# Uncomment and configure to enable authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=""
CLERK_SECRET_KEY=""
CLERK_WEBHOOK_SECRET=""
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/"

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable AI features via environment variables

# Core AI Features
FEATURE_AI_PRIORITIZATION=true
FEATURE_PATTERN_ANALYSIS=true
FEATURE_CONFLICT_DETECTION=true
FEATURE_PRODUCTIVITY_INSIGHTS=true

# AI Provider Features
FEATURE_MULTI_PROVIDER=true
FEATURE_PROVIDER_SWITCHING=true
FEATURE_AI_GATEWAY=false

# Performance & Monitoring
FEATURE_ANALYTICS_CACHING=true
FEATURE_PERFORMANCE_MONITORING=true
FEATURE_AI_COST_MONITORING=true

# Experimental Features
FEATURE_VOICE_INPUT=true
FEATURE_SUBTASK_GENERATION=true
FEATURE_SMART_INBOX=true

# Beta Features (disabled by default)
FEATURE_AUTO_TAGGING=false
FEATURE_CONTEXT_AWARENESS=false

# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV="development"
NEXT_TELEMETRY_DISABLED=1

# Application URL (for webhooks and redirects)
NEXT_PUBLIC_APP_URL="http://localhost:3457"

# Development/Production ports
DEV_PORT=3457
PROD_PORT=3456

# ============================================
# RATE LIMITING
# ============================================
# AI prioritization rate limit (requests per hour)
RATE_LIMIT_AI_PRIORITIZATION=10
RATE_LIMIT_WINDOW=3600000

# ============================================
# AI COST BUDGETS (USD)
# ============================================
# Daily AI cost budget
AI_BUDGET_DAILY=10

# Weekly AI cost budget
AI_BUDGET_WEEKLY=50

# Monthly AI cost budget
AI_BUDGET_MONTHLY=200

# Per-user AI cost budget
AI_BUDGET_PER_USER=5

# Budget alert thresholds (percentage)
AI_BUDGET_WARNING_THRESHOLD=80
AI_BUDGET_CRITICAL_THRESHOLD=95

# ============================================
# CACHE CONFIGURATION
# ============================================
# Analytics cache TTL (milliseconds) - default: 1 hour
ANALYTICS_CACHE_TTL=3600000

# Cache max size (entries)
ANALYTICS_CACHE_MAX_SIZE=1000

# ============================================
# PERFORMANCE THRESHOLDS
# ============================================
# Slow endpoint threshold (milliseconds)
PERFORMANCE_SLOW_ENDPOINT_THRESHOLD=3000

# Slow query threshold (milliseconds)
PERFORMANCE_SLOW_QUERY_THRESHOLD=1000

# Slow AI call threshold (milliseconds)
PERFORMANCE_SLOW_AI_THRESHOLD=5000

# ============================================
# LOGGING CONFIGURATION
# ============================================
# Log level: 'debug', 'info', 'warn', 'error'
LOG_LEVEL="info"

# Enable structured logging
LOG_STRUCTURED=true

# ============================================
# MONITORING & ANALYTICS
# ============================================
# Enable error reporting
ENABLE_ERROR_REPORTING=true

# Sentry DSN (optional, for error tracking)
SENTRY_DSN=""

# Analytics tracking ID (optional)
ANALYTICS_ID=""

# ============================================
# OPTIONAL SERVICES
# ============================================
# Upstash Redis (not currently used - using in-memory cache)
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# ============================================
# TESTING CONFIGURATION
# ============================================
# Test database URL (for running tests)
TEST_DATABASE_URL="postgresql://test:test@localhost:5432/test"

# Disable AI calls in tests
TEST_DISABLE_AI=false

# =============================================
# NOTES
# =============================================
# 1. Copy this file to .env.local for local development
# 2. Never commit .env.local to version control
# 3. Set environment variables in Vercel dashboard for production
# 4. Required variables: DATABASE_URL, AI_SDK_PROVIDER, GEMINI_API_KEY (or other provider key)
# 5. Optional variables: Authentication, monitoring, and advanced features
# 6. Feature flags can be toggled via environment variables or at runtime via API
